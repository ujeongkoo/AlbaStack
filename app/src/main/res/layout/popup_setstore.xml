<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="근무장소"
            android:fontFamily="@font/bmhannaprop"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/spinner_store"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:id="@+id/spinner_store_name_editext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_store"
            android:hint="직접 입력"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_store_name_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_store_name_editext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="추가"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>